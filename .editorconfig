# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 80

[*.yml]
indent_size = 2

[*.hbs]
insert_final_newline = false
max_line_length = 120

[*.{diff,md}]
trim_trailing_whitespace = false
max_line_length = 120

[*.json]
indent_size = 2
